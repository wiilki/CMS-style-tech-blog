<a href="/dashboard">Go back</a>

<h2>Edit</h2>

<form class="edit-post-form">
  <div>
    <label for="post-title">Title:</label>
    <input class="input" name="post-title" type="text" value="{{post.title}}" />
  </div>
  <div>
    <label for="post-content">Content:</label>
    <input class="textarea" name="post-content" type="text" value="{{post.description}}" />
  </div>
  <div>
    created on {{format_date post.date_created}}
    |
    <a href="/posts/{{post.id}}">{{post.comments.length}} {{format_plural "comment" post.comments.length}}</a>
  </div>
  <button type="submit">Update Post</button>
</form>

<button type="button" class="delete-post-btn">Delete</button>

<script src="/js/editPost.js"></script>
<script src="/js/deletePost.js"></script>
<script src="/js/newComment.js"></script>
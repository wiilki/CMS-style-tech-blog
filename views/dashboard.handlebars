{{#if posts.length}}
<div class="col">
    <h3>Your Posts:</h3>

    {{#each posts as |post|}}
    <div class="post-list">
        <div class="row mb post-list">
            <div class="col">
                <h4><a href="/post/{{post.id}}">{{post.title}}</a></h4>
            </div>
            <div class="col">
                <button class="btn btn-danger" data-id="{{post.id}}">DELETE</button>
            </div>
        </div>
        {{/each}}
    </div>
</div>
{{/if}}

<script src="./js/dashboard.js"></script>
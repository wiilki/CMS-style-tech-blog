{{#if posts.length}}
<div class="col">
    <h3>Your Posts:</h3>

    {{#each posts as |post|}}
    {{> displayPost post}}
    <div class="post-list">
        <div class="col">
            <button class="btn btn-danger" data-id="{{post.id}}">DELETE</button>
        </div>
    </div>
    {{/each}}
</div>
{{/if}}

<button type="submit"><a href="/posts">+ New Post</a></button>